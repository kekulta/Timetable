<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:backgroundTint">?colorOnSurfaceVariant</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Bubble">
        <item name="android:background">@drawable/bubble_background</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="Bubble.ClassType">
        <item name="android:backgroundTint">?bubbleColor</item>
        <item name="android:textColor">?onBubbleColor</item>
        <item name="android:textSize">@dimen/class_type_text_size</item>
    </style>

    <style name="Bubble.ScheduleType">
        <item name="android:backgroundTint">?bubbleColor</item>
        <item name="android:textColor">?onBubbleColor</item>
        <item name="android:textSize">@dimen/schedule_type_text_size</item>
    </style>

    <style name="Bubble.Classroom">
        <item name="android:backgroundTint">?bubbleColor</item>
        <item name="android:textColor">?onBubbleColor</item>
        <item name="android:textSize">@dimen/classroom_text_size</item>
    </style>

    <style name="Bubble.Building">
        <item name="android:backgroundTint">?bubbleColor</item>
        <item name="android:textColor">?onBubbleColor</item>
        <item name="android:textSize">@dimen/building_text_size</item>
    </style>

    <style name="Bubble.ClassType.Variant">
        <item name="android:backgroundTint">?bubbleColorVariant</item>
        <item name="android:textColor">?onBubbleColorVariant</item>
    </style>

    <style name="Bubble.ScheduleType.Variant">
        <item name="android:backgroundTint">?bubbleColorVariant</item>
        <item name="android:textColor">?onBubbleColorVariant</item>
    </style>

    <style name="Bubble.Classroom.Variant">
        <item name="android:backgroundTint">?bubbleColorVariant</item>
        <item name="android:textColor">?onBubbleColorVariant</item>
    </style>

    <style name="Bubble.Building.Variant">
        <item name="android:backgroundTint">?bubbleColorVariant</item>
        <item name="android:textColor">?onBubbleColorVariant</item>
    </style>
</resources>